<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_view_height"
    android:background="@drawable/bg_common_item_layout">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/item_tv_name_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/item_tv_main_text_color"
        android:textSize="@dimen/item_tv_main_text_size" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="@dimen/item_tv_id_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_tv_id_margin_left"
        android:layout_toRightOf="@id/tv_name"
        android:gravity="center"
        android:textColor="@color/item_tv_sub_text_color"
        android:textSize="@dimen/item_tv_sub_text_size" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="@dimen/item_tv_age_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/item_tv_age_margin_right"
        android:layout_marginTop="@dimen/item_tv_age_margin_top"
        android:gravity="center"
        android:textColor="@color/item_tv_sub_text_color"
        android:textSize="@dimen/item_tv_sub_text_size" />

</RelativeLayout>